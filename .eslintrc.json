{
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": ["prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": false
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "strict": 0,
      "indent": ["error", 2],
      "semi": ["error", "never"]
    }
  }